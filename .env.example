# Environment Variables Template for KitabiAI
# Copy this file to .env and fill in your actual values

# Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=your_endpoint_here
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_key_here

# FastText Language Detection (Cost Optimization)
USE_FASTTEXT_DETECTION=True  # Set to False to use legacy Azure-based detection
FASTTEXT_MODEL_PATH=lid.176.ftz  # Path to FastText model file
FASTTEXT_CONFIDENCE_THRESHOLD=0.5  # Minimum confidence (0.0-1.0) to trust FastText
FASTTEXT_SAMPLE_PAGES=10  # Number of pages to sample for detection

# Language Detection Settings
ARABIC_RATIO_THRESHOLD=0.3  # Threshold for character-ratio detection (legacy method)

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=True
LOG_LEVEL=INFO

# File Upload Settings
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf

# Add any other configuration variables your app uses
# Never commit the actual .env file with real secrets!